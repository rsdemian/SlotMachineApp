<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/etMediaPlayer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_app2novo"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnTerceiro"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#FFEB3B"
        android:defaultFocusHighlightEnabled="false"
        android:enabled="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnSegundo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSegundo"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#FFEB3B"
        android:defaultFocusHighlightEnabled="false"
        android:enabled="false"
        app:layout_constraintEnd_toStartOf="@+id/btnTerceiro"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnPrimeiro"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnPrimeiro"
        android:layout_width="58dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:backgroundTint="#FFEB3B"
        android:defaultFocusHighlightEnabled="false"
        android:enabled="false"
        app:layout_constraintEnd_toStartOf="@+id/btnSegundo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblResultadoMoeda"
        android:layout_width="65dp"
        android:layout_height="32dp"
        android:layout_marginTop="36dp"
        android:text="0"
        android:textColor="#2196F3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/btnSegundo" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="176dp"
        android:layout_height="41dp"
        android:layout_marginTop="36dp"
        android:text="Moedas:"
        android:textColor="#2196F3"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/lblResultadoMoeda"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPrimeiro" />

    <TextView
        android:id="@+id/lblResultadoPontuacao"
        android:layout_width="41dp"
        android:layout_height="28dp"
        android:layout_marginTop="12dp"
        android:text="0"
        android:textColor="#2196F3"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/lblResultadoMoeda" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="101dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:text="Pontuação:"
        android:textColor="#2196F3"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/lblResultadoPontuacao"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/btnApostar"
        android:layout_width="53dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="@color/teal_700"
        android:defaultFocusHighlightEnabled="false"
        android:enabled="false"
        android:text="$"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/btnSair"
        android:layout_width="80dp"
        android:layout_height="47dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#4CAF50"
        android:text="SAIR"
        app:layout_constraintStart_toEndOf="@+id/btnNovoJogo"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/btnNovoJogo"
        android:layout_width="146dp"
        android:layout_height="47dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#2196F3"
        android:text="NOVO JOGO"
        app:layout_constraintStart_toEndOf="@+id/btnApostar"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/btnRanking"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@android:drawable/btn_star_big_on"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/lblResultadoMoeda" />

    <Button
        android:id="@+id/btnInfo"
        android:layout_width="50dp"
        android:layout_height="47dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:background="@android:drawable/ic_dialog_info"
        app:layout_constraintStart_toEndOf="@+id/btnSair"
        app:layout_constraintTop_toBottomOf="@+id/lblResultadoPontuacao" />

    <Button
        android:id="@+id/btnCreditos"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:background="@android:drawable/btn_star_big_on"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintHorizontal_bias="0.725"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblResultadoPontuacao" />

</androidx.constraintlayout.widget.ConstraintLayout>